<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/forms_background"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/custom_view"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Аплицирај"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/raleway_regular"
        android:background="@drawable/apply_shape"/>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="150dp"
    android:layout_height="180dp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".SecondActivity">





    </LinearLayout>
</ScrollView>
    <Button
        android:id="@+id/attach_file"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="Прикачи документ"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/raleway_regular"
        android:background="@drawable/rec_black"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/send_btn"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="Поднеси"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/raleway_regular"
        android:background="@drawable/rec_black"
        android:layout_height="wrap_content" />
</LinearLayout>